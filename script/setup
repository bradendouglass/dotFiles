#!/bin/sh
# Dotfiles installer

SRCDIR="$HOME/src"
DOTFILES="$HOME/.dotfiles"
HOMESICK="$HOME/.homesick"

if [[ ! -d "$HOMESICK" ]]; then

if [[ ! -d "$SRCDIR" ]]; then
  mkdir "$SRCDIR"
fi

cd "$DOTFILES"

sudo gem install homesick

homesick clone braidn/dotfiles
homesick symlink dotfiles

cd "$HOME"
rm -rf "$DOTFILES"

fi
